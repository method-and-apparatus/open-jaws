# ============================================
# OPEN JAWS — Mission Credentials
# ============================================
# Q has prepared this template.
# Fill in your Twitter/X API credentials below.
# DO NOT commit the filled .env to the repo.
# 007 would be very disappointed.

# Twitter API v2 — Bearer Token (for reading)
TWITTER_BEARER_TOKEN=

# Twitter API — OAuth 1.0a (for posting & muting)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ============================================
# MISSION PARAMETERS
# ============================================

# Offenses before termination (default: 3)
STRIKE_THRESHOLD=3

# Rolling window for counting strikes, in days (default: 7)
LOOKBACK_DAYS=7

# Sweep interval in minutes (default: 30)
SCAN_INTERVAL_MINUTES=30

# Tweet every kill confirmation (default: true)
POST_KILLS=true

# Observe only — no muting, no tweeting (default: false)
DRY_RUN=false

# Maximum tweets to scan per sweep (default: 200)
MAX_TIMELINE_RESULTS=200
